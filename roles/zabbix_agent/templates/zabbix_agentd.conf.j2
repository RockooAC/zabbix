PidFile=/run/zabbix/zabbix_agentd.pid
LogFile=/var/log/zabbix-agent/zabbix_agentd.log
LogFileSize=0
Server={{ zabbix_server_ip }}
ServerActive={{ zabbix_active_server }}
Hostname={{ ansible_hostname }}
HostMetadataItem={{ host_metadata_item }}
Include=/etc/zabbix/zabbix_agentd.conf.d/*.conf
TLSConnect={{ tLSConnect }}
TLSAccept={{ tLSAccept }}
TLSPSKIdentity={{ tLSPSKIdentity }}
TLSPSKFile=/etc/zabbix/zabbix-agent.key

# Include configuration files for custom scripts to execute on host
Include=/etc/zabbix/zabbix_agent2.d/customscripts.d/*.conf